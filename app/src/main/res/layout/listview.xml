<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tv_list_image"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_list_image"
        android:layout_alignBottom="@+id/tv_list_image"
        android:layout_toRightOf="@+id/tv_list_image"
        android:layout_toEndOf="@+id/tv_list_image"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_list_name"
            android:layout_toEndOf="@+id/tv_list_image"
            android:layout_toRightOf="@+id/tv_list_image"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:layout_above="@+id/tv_list_location"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_list_location"
            android:layout_toRightOf="@+id/tv_list_image"
            android:layout_toEndOf="@+id/tv_list_image"
            android:layout_marginLeft="10dp"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_marginRight="7dp"
            android:layout_alignParentEnd="true"
            android:maxHeight="21dp" />

    </LinearLayout>
</RelativeLayout>