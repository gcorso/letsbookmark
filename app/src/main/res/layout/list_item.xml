<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_list_image"
        android:layout_alignBottom="@+id/tv_list_image"
        android:layout_toRightOf="@+id/tv_list_image"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/iv_item_plus"
        android:layout_toStartOf="@+id/iv_item_plus">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_list_name"
            android:layout_toEndOf="@+id/tv_list_image"
            android:layout_toRightOf="@+id/tv_list_image"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:textSize="17sp"
            android:layout_above="@+id/tv_list_location"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_list_location"
            android:layout_toRightOf="@+id/tv_list_image"
            android:layout_toEndOf="@+id/tv_list_image"
            android:layout_marginLeft="10dp"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginRight="7dp"
            android:layout_alignParentEnd="true"
            android:maxHeight="21dp" />

    </LinearLayout>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/iv_item_plus"
        android:layout_alignBottom="@+id/tv_list_image"
        android:layout_alignTop="@+id/tv_list_image"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_width="40dp" />

    <ImageView
        android:id="@+id/tv_list_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
</RelativeLayout>